import java.util.Scanner;

public class YoungPhysicist {
    
    static Scanner scanner = new Scanner (System.in);
    static int n, x, y, z;

    public static void main(String[] args) {
	n = scanner.nextInt();
	for (int i = 0; i < n ; i++) {
	    x = x + scanner.nextInt();
	    y = y + scanner.nextInt();
	    z = z + scanner.nextInt();
	}
	
	if (x == 0 && y == 0 && z == 0) {
	    System.out.println("YES");
	} else {
	    System.out.println("NO");
	}
    }

}
